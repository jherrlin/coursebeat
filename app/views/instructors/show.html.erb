<h1>Courses for <%= @instructor.username %></h1><br>

<div class="buttonsBar">
	<div class="left"><a class="btn btn-success btn-lg" href="/courses/new" id="newLesson">New Course</a></div>
	<div class="right">
		<%= link_to "Edit Account", edit_instructor_path(params[:id]), class: "btn btn-info btn-lg" %>
		<%= link_to "Delete Account", "#", class: "btn btn-danger btn-lg" %>
	</div>
</div>
<br>
<% @courses.reverse.each do |course| %>
	<p>
   	<div class="left"><%= link_to course.course_name, course_path(course.secret_code) %></div>
   	<div class="right">
   		<%= link_to "View", course_path(course.secret_code), class: 'btn btn-primary' %>
   		<%= link_to "Edit", edit_course_path(course.secret_code), class: 'btn btn-info' %>
   		<%= link_to "Delete", course_path(course), :method => :delete, class: 'btn btn-danger' %>
   	</div></p>
<% end %>
<br>
<%= link_to "Back to Home", lessons_path, class: 'btn btn-warning' %>

