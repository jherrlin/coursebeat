<% if current_user %>
	<h1><div class="left">Welcome to CourseBeat!</div></h1><br><br>
	<h2><div class="left">You are logged in as <%= current_user.username %></div>
		<div class="right">
			<a class="btn btn-success btn-lg" href="/courses/new" id="newLesson">New Course</a>
		</div>
	</h2>
<% else %>
	<h1 class="left">Welcome to CourseBeat! <span class="glyphicon glyphicon-book"></span></h1><br><br><br>
	<h2>Check out some sample lessons!</h2>
<% end %>
<br>

<% @lessons.reverse.each do |entry| %>
	<% if entry.course_id == "0" %>
	<p>
   	<div class="left"><%= link_to entry.title, lesson_path(entry.secret_code) %></div>
   	<div class="right"><%= link_to "View", lesson_path(entry), class: 'btn btn-primary' %>
   	<%= link_to "Delete", lesson_path(entry), :method => :delete, class: 'btn btn-danger' %></div></p>
   	<% end %>
<% end %>
<br>


